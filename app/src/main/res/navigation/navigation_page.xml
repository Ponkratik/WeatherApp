<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_page"
    app:startDestination="@id/fragment_favorites_list">

    <fragment
        android:id="@+id/fragment_favorites_list"
        android:name="com.ponkratov.weatherapp.presentation.ui.favorites.FavoritesListFragment"
        tools:layout="@layout/fragment_favorites_list" >
        <action
            android:id="@+id/action_fragment_favorites_list_to_fragment_weather_info"
            app:destination="@id/fragment_weather_info"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/fragment_cities_list"
        android:name="com.ponkratov.weatherapp.presentation.ui.findcity.CitiesListFragment"
        tools:layout="@layout/fragment_cities_list" >
        <action
            android:id="@+id/action_fragment_cities_list_to_fragment_weather_info"
            app:destination="@id/fragment_weather_info"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/fragment_settings"
        android:name="com.ponkratov.weatherapp.presentation.ui.settings.SettingsFragment"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/fragment_weather_info"
        android:name="com.ponkratov.weatherapp.presentation.ui.weatherinfo.WeatherInfoFragment"
        tools:layout="@layout/fragment_weather_info">

        <argument
            android:name="city"
            app:argType="com.ponkratov.weatherapp.domain.model.City" />
    </fragment>

    <fragment
        android:id="@+id/fragment_map"
        android:name="com.ponkratov.weatherapp.presentation.ui.map.MapFragment"
        tools:layout="@layout/fragment_map" >
        <action
            android:id="@+id/action_fragment_map_to_fragment_weather_info"
            app:destination="@id/fragment_weather_info"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

</navigation>